							}else{
							    $route = 'msg-enviadas';
							}		    
							 ?>
							<td colspan="3"><?= $this->paginationControl($mensagens,'Sliding','admin/mensagem/paginator', ['route' => $route]); ?>
							</td>
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
	</div>
</div>
