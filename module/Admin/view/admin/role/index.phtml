		</tbody>
	</table>
</div>
<script>
$().ready(function(){

	$('button[name="permissao-detalhar"]').click(function(){
		urlDialog('<?= $this->url('role',['action'=>'detalhar']);?>'+'/id/'+$(this).val(),'Permissões para '+$(this).closest('tr').find('td:eq(1)').html());
	});

	$("#btn-new").click(function(){
		document.location.href = "<?php echo $this->url("role",["action"=>"cadastrar"]);?>";
	});

	$("button[name=editar]").click(function(){
		document.location.href = "<?php echo $this->url('role',['action'=>'editar']);?>/id/" + $(this).attr("value");
	});

	$("button[name=del]").click(function(){
		if(confirm("Deseja remover permanentemente esta função?")){
			document.location.href = "<?php echo $this->url('role',['action'=>'del']);?>/id/" + $(this).attr("value");
		}
	});
	
	
});
</script>